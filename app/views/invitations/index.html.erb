<% title "Invitations" %>

<table>
  <tr>
    <th>Token</th>
    <th>Email</th>
    <th>Accepted</th>
    <th colspan="3">Actions</th>
  </tr>
  <% for invitation in @invitations %>
    <tr>
      <td><%= invitation.token %></td>
      <td><%= invitation.email %></td>
      <td><%= invitation.accepted %></td>
      <td><%= link_to "Show", invitation %></td>
      <% unless invitation.accepted %>
        <td><%= link_to "Resend", resend_invitation_path(invitation), :method => :post %></td>
        <td><%= link_to "Edit", edit_invitation_path(invitation) %></td>
        <td><%= link_to "Destroy", invitation, :confirm => 'Are you sure?', :method => :delete %></td>
      <% else %>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      <% end %>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Invitation", new_invitation_path %></p>
